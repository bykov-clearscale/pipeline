pipeline {
    agent {
        node {
            label 'master'
        }
    }
environment {
        ANSIBLE_INVENTORY="/etc/ansible/ec2.py"
        EC2_INI_PATH="/etc/ansible/ec2.ini"
    }
    stages {
        stage('checkout repo') {
          steps {
            checkout scm
          }
        }
        stage('Refresh Cache') {
          steps {
            sh "$ANSIBLE_INVENTORY --refresh-cache > /dev/null"
          }
        }
        stage('Validate') {
          steps {
            print "Checking syntax of the playbook ${params.playbook}"
            sh "ansible-playbook ${params.playbook} --syntax-check"
          }
        }
        stage('Run playbook') {
          steps {
            sh """
               ansible-playbook ${params.playbook} -u ${params.username} --private-key ${params.ssh_key} > ansible_log
            """
          }
        }
        stage('logs') {
            steps {
               s3Upload(bucket:"${S3_BUCKET}", path:"${params.project_name}/ansible/${BUILD_ID}/ansible_log", file:"ansible_log")
            }
        }
        
    }
}
