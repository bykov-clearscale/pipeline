pipeline {
    agent {
        node {
            label 'master'
        }
    }
environment {
        ANSIBLE_INVENTORY="/etc/ansible/ec2.py"
        EC2_INI_PATH="/etc/ansible/ec2.ini"
        ANSIBLE_EC2_PEM_FILE="${params.ssh_key}"
        ANSIBLE_REMOTE_USER="${params.username}"
    }
    stages {
        stage('checkout repo') {
          steps {
            checkout scm
          }
        }
        stage('Refresh Cache') {
          steps {
            sh "$ANSIBLE_INVENTORY --refresh-cache > /dev/null"
          }
        }
        stage('Validate') {
          steps {
            print "Checking syntax of the playbook ${params.playbook}"
            sh "ansible-playbook ${params.playbook} --syntax-check"
          }
        }
        stage('Run playbook') {
          steps {
            sh """
               ansible-playbook ${params.playbook} -vvvvv > ansible_log
            """
          }
        }
        
    }
}
